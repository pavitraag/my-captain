#include <stdio.h>
int sum (int num);
int main()
{
	int num,result;
	printf("enter a number to find sum of digits");
	scanf("%d",&num);
	result = sum (num);
	printf(" the sum of digits in %d is %d",num,result);
	return 0;
}
   int sum (int num)
    {
		if(num != 0)
	{
	return((num%10)+ sum (num/10)) ;
}
    else
	{
	return 0;
}
}
